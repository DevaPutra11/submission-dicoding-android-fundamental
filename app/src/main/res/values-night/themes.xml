<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BangkitSubmission1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_github</item>
        <item name="colorPrimaryVariant">@color/black_base_github</item>
        <item name="colorOnPrimary">@color/white_github</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_github</item>
        <item name="colorSecondaryVariant">@color/white_github</item>
        <item name="colorOnSecondary">@color/white_github</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BangkitSubmission1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_github</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textUsername">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_github</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_github</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textContent.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white_github</item>
        <item name="android:editTextColor">@color/white_github</item>
        <item name="android:textColorHint">@color/grey_github</item>
        <item name="android:textSize">16sp</item>
        <item name="android:strokeColor">@color/white_github</item>
    </style>
</resources>